# mac specific bash aliases

# common
source $HOME/.zsh_aliases_common

# bored
alias lookBusy="hexdump -C < /dev/urandom | grep 'f'"

# git bash completion
[[ -r "/usr/local/etc/profile.d/bash_completion.sh" ]] && . "/usr/local/etc/profile.d/bash_completion.sh"

# ls
alias ls="ls -G"
alias ll="ls -ltrh"

# change to my thesis directory :'(
alias cdThesis="cd ~/Documents/Manchester/PhD/thesis"

# open with Preview
alias previewOpen="open -a Preview"

# vim wiki
export VIMWIKI=$HOME/Documents/vimwiki

# MadGraph binary
alias runMG=$HOME/Documents/Manchester/PostDoc/majorana_neutrino/MadGraph/MG5_aMC_v2_8_1/bin/mg5_aMC
