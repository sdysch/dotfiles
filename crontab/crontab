# backup todo list every hour
SHELL=/bin/bash
PATH=~/bin:/usr/bin:/bin:~/.local/bin

# backup todo list every 3 hours
0 */3 * * * backup-todo-list

# check battery status every minute
* * * * * export DBUS_SESSION_BUS_ADDRESS=unix:path=/run/user/1000/bus; export DISPLAY=:0; . $HOME/.zshrc;  check_battery

# Reminder to do duolingo
0 13 * * * export DBUS_SESSION_BUS_ADDRESS=unix:path=/run/user/1000/bus; export DISPLAY=:0; . $HOME/.zshrc;  notify-send -i $ICONSDIR/DanishFlag.png -u low "Reminder" "Duolingo"
