#!/bin/bash
# scripts
PROMPT="$HOME/dotfiles_harmonised/scripts/prompt"
LOGOUTSCRIPT="$HOME/dotfiles_harmonised/scripts/logout"
SHUTDOWNSCRIPT="$HOME/dotfiles_harmonised/scripts/reboot"
REBOOTSCRIPT="$HOME/dotfiles_harmonised/scripts/shutdown_script"

TEXT="Would you like to..."
options=("Shutdown?\nReboot?\nLogout?\nQuit")
chosen=$(echo -e "$options" | dmenu -i)

case $chosen in
	"Shutdown?")
	source "$PROMPT" "Shutdown?" "$SHUTDOWNSCRIPT";;
	"Reboot?")
	source "$PROMPT" "Reboot?" "$REBOOTSCRIPT";;
	"Logout?")
	source "$PROMPT" "Logout?" "$LOGOUTSCRIPT";;
	"Quit menu?")
		break;;
esac
