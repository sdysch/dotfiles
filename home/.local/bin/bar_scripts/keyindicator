#!/bin/bash
CAPSSTATUS=$(xset -q | grep "Caps Lock" | awk '{print $4}')
NUMSTATUS=$(xset -q | grep "Num Lock" | awk '{print $8}')

# caps lock?
if [ "$CAPSSTATUS" = "on" ]
then
	echo '<span foreground = "light green"> ðŸ”’ CAPS on </span>'
fi

# num lock?
if [ "NUMSTATUS" = "on" ]
then
	echo '<span foreground = "light green"> ðŸ”’ NUM on </span>'
fi
