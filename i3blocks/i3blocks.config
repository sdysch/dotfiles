# vim: filetype=i3blocks

# icons: https://fontawesome.com/cheatsheet?from=io

# restart i3 on click
#[restart_i3]
#full_text=Restart i3
#command=i3-msg -q restart
#color=#FF0000

[open_chrome]
full_text=
#full_text=Google Chrome
color=#F0FFF0
command=google-chrome > /dev/null

[open_firefox]
full_text=
#full_text=Firefox
color=#F0FFF0
command=firefox

[open_skype]
full_text=
#full_text=Skype
command=skypeforlinux
color=#F0FFF0
separator=false

[programs]
full_text=〈
#full_text=← Programs 〈
separator=false

[time]
label= 
#label=🕑 
command=date +%T
interval=1
color=#ff8000

[date]
label= 
#label=📅 
command=date '+%A, %d/%m/%Y'
interval=once
color=#ff8000

[volume]
command=~/dotfiles_harmonised/i3blocks/scripts/volume
label=
#label=♪
interval=once
signal=2
color=#0080ff

[battery]
command=~/dotfiles_harmonised/i3blocks/scripts/battery2
#command=~/dotfiles_harmonised/i3blocks/scripts/battery
markup=pango
interval=10
#color=#00FF00

#[bandwidth]
#command=~/dotfiles_harmonised/i3blocks/scripts/bandwidth2
##command=~/dotfiles_harmonised/i3blocks/scripts/bandwidth
#markup=pango
#interval=persist
#color=#8000ff
#separator=false

#[bandwidth_name]
#command=iwgetid -r
#interval=30
#color=#8000ff

[wireless]
command=iwgetid -r || echo "Not connected"
label= 
#label=📶 
interval=30
color=#8000ff

# Guess the weather hourly
[weather]
label= 
command=curl -Ss 'https://wttr.in?0&T&Q' | cut -c 16- | head -2 | xargs echo
interval=3600
color=#A4C2F4

[keyindicator]
command=~/dotfiles_harmonised/i3blocks/scripts/keyindicator
label= 
#label=⇪
markup=pango
interval=once
signal=11
color=#00FF00

[cpu_usage]
command=~/dotfiles_harmonised/i3blocks/scripts/cpu_usage
label=💻 
interval=30

[disk_usage]
command=~/dotfiles_harmonised/i3blocks/scripts/disk_usage
label=💾
interval=30
separator=false
color=#FFC0CB

#[memory]
#command=~/dotfiles_harmonised/i3blocks/scripts/memory
#label=💾
#interval=5

#[primary]
