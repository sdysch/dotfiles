# shutdown, reboot, ...
[power_controls]
full_text=〉
#full_text= 〉Power controls →
color=#ffffff
separator=false

[shutdown]
full_text=
#full_text=Shutdown
command=~/dotfiles_harmonised/scripts/prompt.sh "Shutdown computer?" ~/dotfiles_harmonised/scripts/shutdown
color=#FF0000

[reboot]
full_text=
#full_text=Reboot
command=~/dotfiles_harmonised/scripts/prompt.sh "Reboot computer?" ~/dotfiles_harmonised/scripts/reboot
color=#FFA500

[logout]
full_text=
#full_text=Logout
command=~/dotfiles_harmonised/scripts/logout
color=#FFFF00
