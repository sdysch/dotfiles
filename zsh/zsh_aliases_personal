# personal aliases

# ls
alias ls="ls --color=auto"
alias ll="ls -ltrh"

# taskwarrior
alias t="task"
alias tp="/home/sdysch/dotfiles_harmonised/taskwarrior/task --task-git-push"
export TASKDIR=$HOME/.task


# opening files
open() {
	xdg-open $@ 2>/dev/null
}

# root version
rootSource="/home/sdysch/Documents/rootInstall/build/bin/thisroot.sh"
source $rootSource

# thesis
export thesisDir="/home/sdysch/Documents/Manchester/PhD/thesis"
# navigate to thesis dir
alias cdthesis="cd ${thesisDir}"
# open my thesis [ screams internally :'(]
alias thesis="open ${thesisDir}/thesis.pdf"

# to do list
export TODOLISTDIR="/home/sdysch/.todolist"
export PATH=$PATH:"${TODOLISTDIR}/scripts"

# to do list backup (repo is private from git)
export TODOBACKUP="/home/sdysch/Documents/todolist-backup"
export PATH=$PATH:"${TODOBACKUP}/scripts"

# directory where icons are stored
# FIXME - hardcoded!
export ICONSDIR="/home/sdysch/dotfiles_harmonised/icons"

# unplug/plugin screens
plugin() {
	xrandr --output eDP-1 --primary && xrandr --output HDMI-1 --primary --mode 1920x1080 --left-of eDP-1 && nitrogen --restore
}

unplug() {
	xrandr --output HDMI-1 --off
}
