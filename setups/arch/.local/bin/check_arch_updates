#!/bin/sh

if ! updates_arch="$(checkupdates | wc -l)"; then
    updates_arch=0
fi

if ! updates_aur="$(yay -Qum 2>/dev/null | wc -l)"; then
    updates_aur=0
fi

updates="$((updates_arch + updates_aur))"

if [ "$updates" -gt 0 ]; then
    notify-send -i dialog-information "Info" -u normal "$updates_arch Arch updates, $updates_aur AUR updates are available"
fi
