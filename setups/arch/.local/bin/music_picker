#!/bin/sh

# REF: https://github.com/BreadOnPenguins/scripts/blob/master/dmenu_musicpicker

file="$(mpc listall | rofi -dmenu -i -p 'ðŸŽµ Select track' -l 20 -width 60)" || exit 0

if [ -n "$file" ]; then
	track="$(basename "$file")"
	notify-send -i dialog-information "Playing $track"
    mpc insert "$file"
    mpc next >/dev/null
fi

