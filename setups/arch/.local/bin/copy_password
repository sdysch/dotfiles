#!/bin/bash
# dmenu/rofi script to copy password from GNU pass

shopt -s nullglob globstar

prefix=${PASSWORD_STORE_DIR-~/.password-store}
password_files=( "$prefix"/**/*.gpg )
password_files=( "${password_files[@]#"$prefix"/}" )
password_files=( "${password_files[@]%.gpg}" )

# Default to dmenu
menu_cmd() {
    dmenu -fn 'xos4 Terminus:size=12' \
          -sb '#A3BE8C' -nb '#2E3440' \
          -nf '#D8DEE9' -sf '#434C5E' \
          -p "Choose a password to temporarily copy:" -l 10 "$@"
}

# If -r is passed, switch to rofi
if [[ "$1" == "-r" ]]; then
    shift
    menu_cmd() {
        rofi -dmenu -i -p "Choose a password to temporarily copy:" -lines 10 "$@"
    }
fi

password=$(printf '%s\n' "${password_files[@]}" | menu_cmd)

if [[ -n "$password" ]]; then
    pass -c "$password" 2>/dev/null
    notify-send "Temporarily copied password for $password"
fi
