{
    "layer": "top",
    "position": "top",
    "spacing": 0,
    "height": 32,
    "modules-left": [
        "custom/logo",
        "clock",
        "pulseaudio",
        "battery",
        "custom/weather",
        // "backlight",
        // "custom/uptime",
        "custom/music"
    ],
    "modules-center": [
        "hyprland/workspaces"
    ],
    "modules-right": [
        "custom/duolingo",
        "custom/mail",
        "custom/todos",
        "custom/pacman",
        "custom/newsboat",
        "cpu",
        "custom/diskfree",
        "tray"
        // "custom/power"
    ],

    "hyprland/workspaces": {
        "format": "{name}",
        "on-click": "activate",
        "persistent-workspaces": { "*": 1 },
        "disable-scroll": false,
        "sort-by-number": true
    },

	"cpu": {
		"interval": 2,
		"tooltip": false,
		"on-click": "$TERMINAL -e btop --tty",
		"format-critical": "<span color='#BF616A'><b>ÔàÅ {usage}%</b></span>",
		"format-high": "<span color='#5E81AC'>ÔàÅ {usage}%</span>",
		"format-medium": "<span color='#81A1C1'>ÔàÅ {usage}%</span>",
		"format-low": "<span color='#ECEFF4'>ÔàÅ {usage}%</span>",
		"states": { "critical": 80, "high": 50, "medium": 5, "low": 0 }
	},

    "memory": {
        "interval": 5,
        "format": "Mem: {}%",
        "max-length": 15
    },

    "tray": { "spacing": 10 },

    "clock": {
        "format": "{:%H:%M, %d/%m/%Y}",
        "tooltip-format": "{calendar}"
    },

    "battery": {
        "format": "{capacity}% {icon}",
        "interval": 5,
        "tooltip": false,
        "states": { "warning": 30, "critical": 15 },
        "format-icons": {
            "charging": ["Û∞¢ú","Û∞ÇÜ","Û∞Çá","Û∞Çà","Û∞¢ù","Û∞Çâ","Û∞¢û","Û∞Çä","Û∞Çã","Û∞ÇÖ"],
            "default": ["Û∞Å∫","Û∞Åª","Û∞Åº","Û∞ÅΩ","Û∞Åæ","Û∞Åø","Û∞ÇÄ","Û∞ÇÅ","Û∞ÇÇ","Û∞Åπ"]
        },
        "format-full": "Charged ÔÉß"
    },

    "pulseaudio": {
        "format": "{icon} {volume}%",
        "format-muted": "ÔÄ¶ muted",
        "format-icons": ["ÔÄß", "ÔÄ®", "ÔÄ®"],
        "on-click": "pavucontrol"
    },

    "backlight": {
        "device": "intel_backlight",
        "format": "{percent}% {icon}",
        "format-icons": ["ÔÜÖ", "ÔÑë"]
    },

    "custom/mail": {
        "format": "{}",
        "exec": "unread_mail",
        "signal": 9
    },

    "custom/todos": {
        "format": "üìù {}",
        "exec": "vimwiki_todo",
        "signal": 10
    },

    "custom/pacman": {
        "format": "\uf013 {}",
        "interval": 3600,
        "exec": "checkupdates | wc -l"
    },

    "custom/diskfree": {
        "format": "\uf108 {}",
        "interval": 300,
        "exec": "df --total -hl | grep 'nvme0n1p5' | awk '{print $5}'"
    },

    "custom/power": {
        "format": "Û∞§Ü",
        "tooltip": false,
        "on-click": "poweroptions -r"
    },

    "custom/logo": {
        "format": " ÔåÉ ",
        "tooltip": false
    },

    "custom/weather": {
        "exec": "weather_formatted",
        "interval": 3600
    },

	"custom/uptime": {
		"exec": "echo ‚è±Ô∏è $(uptime -p | sed 's/hours/h/;s/minutes/m/;s/seconds/s/;s/up //')",
		"interval": 60,
		"tooltip": true
	},

    "custom/music": {
        "exec": "musicplayer",
        "interval": 1,
        "tooltip": false,
        "on-click": "playerctl play-pause"
    },

    "custom/newsboat": {
        "exec": "unread_news",
        "interval": 60,
        "tooltip": true,
        "format": "{text}",
        "on-click": "alacritty -e newsboat",
        "return-type": "json"
    },

    "custom/internet_speed": {
        "exec": "internet_speed",
        "interval": 1,
        "tooltip": false,
        "format": "{text}",
        "return-type": "json"
    },

    "custom/duolingo": {
        "format": "{}",
        "exec": "duolingo_streak",
        "interval": 3600
    }
}
