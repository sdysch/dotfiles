import json
import urllib.request

url = f'https://www.duolingo.com/2017-06-30/users?username=sdysch'

try:
    with urllib.request.urlopen(url, timeout=5) as response:
        data = json.load(response)

    user = data['users'][0]

    streak_length = user.get('streakData', {}).get('currentStreak', {}).get('length', 0)

    if streak_length > 0:
        print(f'ğŸ‡©ğŸ‡°ğŸ”¥ {streak_length}')
    else:
        print('ğŸ‡©ğŸ‡°â³ 0')

except Exception:
